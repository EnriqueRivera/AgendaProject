<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MyDentApplication.AddEditBudgetTreatmentsModal"
	x:Name="Window"
	Title="Agregar tratamiento para presupuesto"
	Width="317" Height="131" ResizeMode="CanMinimize" Icon="/MyDentApplication;component/Images/app_icon.ico" WindowStartupLocation="CenterScreen">

	<Grid x:Name="LayoutRoot">
		<Label x:Name="lblTreatmentName" Content="Nombre:" HorizontalAlignment="Left" Height="27" Margin="15,14,0,0" VerticalAlignment="Top" Width="59.333"/>
		<TextBox x:Name="txtTreatmentName" Height="27" Margin="79.333,14,12,0" TextWrapping="Wrap" VerticalAlignment="Top" TabIndex="4" BorderThickness="1" BorderBrush="Black"/>
		<Button x:Name="btnAddUpdateTreatments" Content="Agregar" Margin="0,0,106,10" Click="btnAddUpdateTreatments_Click" Cursor="Hand" TabIndex="7" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="91"/>
		<Button x:Name="btnCancel" Content="Cancelar" Margin="0,0,10,10" Click="btnCancel_Click" Cursor="Hand" TabIndex="8" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="91"/>
	</Grid>
</Window>