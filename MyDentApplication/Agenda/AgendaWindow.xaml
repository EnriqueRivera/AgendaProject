					<xctk:ColorPicker x:Name="cpExceptionEvents" HorizontalAlignment="Left" Height="21.667" Margin="29.527,38.459,0,0" VerticalAlignment="Top" Width="49.973" Cursor="Hand" SelectedColorChanged="cpStatusEvents_SelectedColorChanged" ShowAdvancedButton="False" AvailableColorsHeader="Colores disponibles" RecentColorsHeader="Colores recientes" StandardColorsHeader="Colores estándar" Tag="EXCEPTION" TabIndex="5"/>
