					<xctk:ColorPicker x:Name="cpCompletedEvents" HorizontalAlignment="Left" Height="21.667" Margin="29.527,120.681,0,0" VerticalAlignment="Top" Width="49.559" Cursor="Hand" SelectedColorChanged="cpStatusEvents_SelectedColorChanged" ShowAdvancedButton="False" AvailableColorsHeader="Colores disponibles" RecentColorsHeader="Colores recientes" StandardColorsHeader="Colores estándar" Tag="COMPLETED" TabIndex="11"/>
