<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MyDentApplication.AddEditDrawersModal"
	x:Name="Window"
	Title="Agregar cajón"
	Width="380" Height="146" Icon="/MyDentApplication;component/Images/app_icon.ico" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
	<Grid x:Name="LayoutRoot" Margin="0,0,-2,-2">
		<Button x:Name="btnAddUpdateDrawer" Content="Agregar" Margin="92.17,0,0,10" Cursor="Hand" TabIndex="6" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="91" Click="btnAddUpdateDrawer_Click"/>
		<Button x:Name="btnCancel" Content="Cancelar" Margin="188.17,0,0,10" Cursor="Hand" TabIndex="7" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="91" Click="btnCancel_Click"/>
		<Label x:Name="lblTreatmentName" Content="Nombre del cajón:" Height="27" Margin="10,10,10,0" VerticalAlignment="Top"/>
		<TextBox x:Name="txtDrawerName" Height="27" Margin="10,37,10,0" TextWrapping="Wrap" VerticalAlignment="Top" TabIndex="1" BorderThickness="1" BorderBrush="Black" TextAlignment="Center"/>
	</Grid>
</Window>