<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MyDentApplication.EditInstrumentModal"
	x:Name="Window"
	Title="Actualizar información del instrumento"
	Width="380" Height="146" Icon="/MyDentApplication;component/Images/app_icon.ico" WindowStartupLocation="CenterScreen">
	<Grid x:Name="LayoutRoot" Margin="0,0,-4,-4">
		<Button x:Name="btnUpdateInstrument" Content="Actualizar" Margin="92.17,0,0,10" Cursor="Hand" TabIndex="6" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="91" Click="btnUpdateInstrument_Click" />
		<Button x:Name="btnCancel" Content="Cancelar" Margin="188.17,0,0,10" Cursor="Hand" TabIndex="7" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="91" Click="btnCancel_Click"/>
		<Label x:Name="lblTreatmentName" Content="Nombre del instrumento:" Height="27" Margin="10,10,10,0" VerticalAlignment="Top"/>
		<TextBox x:Name="txtInstrumentName" Height="27" Margin="10,37,10,0" TextWrapping="Wrap" VerticalAlignment="Top" TabIndex="1" BorderThickness="1" BorderBrush="Black" TextAlignment="Center"/>
	</Grid>
</Window>