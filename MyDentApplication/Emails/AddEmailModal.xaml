<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MyDentApplication.AddEmailModal"
	x:Name="Window"
	Title="Agregar email"
	Width="308.5" Height="122.5" Icon="/MyDentApplication;component/Images/app_icon.ico" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">

	<Grid x:Name="LayoutRoot">
		<Label x:Name="lblUserId" Content="Email:" HorizontalAlignment="Left" Height="27" Margin="10,10,0,0" VerticalAlignment="Top" Width="40.667"/>
		<TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="27" Margin="55.667,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="221.333" TabIndex="1" BorderBrush="Black"/>
		<Button x:Name="btnAccept" Content="Aceptar" HorizontalAlignment="Left" Height="24.97" Margin="58.67,50.661,0,0" VerticalAlignment="Top" Width="90" Cursor="Hand" Click="btnAccept_Click" TabIndex="3"/>
		<Button x:Name="btnCancel" Content="Cancelar" HorizontalAlignment="Left" Height="24.97" Margin="153.67,50.661,0,0" VerticalAlignment="Top" Width="90" Cursor="Hand" Click="btnCancel_Click" TabIndex="4"/>
	</Grid>
</Window>