        					</StackPanel>
        				</Button>
        				<Button x:Name="btnManageCleanedMaterials" Width="90" Height="90" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnManageCleanedMaterials_Click" Margin="0,0,0,5" >
