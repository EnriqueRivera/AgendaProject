        						<Image Source="/MyDentApplication;component/Images/received_invoice_icon.png" Width="50" Height="50"  />
        						<TextBlock TextAlignment="Center" ><Run Text="Facturas"/><LineBreak/><Run Text="recibidas"/></TextBlock>
