<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MyDentApplication.RequestCredentialsModal"
	x:Name="Window"
	Title="Firma de usuario"
	Width="304.642" Height="149.97" Icon="/MyDentApplication;component/Images/app_icon.ico" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">

	<Grid x:Name="LayoutRoot">
		<Label x:Name="lblUserId" Content="Número de empleado:" HorizontalAlignment="Left" Height="27" Margin="10,10,0,0" VerticalAlignment="Top" Width="132"/>
		<Label x:Name="lblPassword" Content="Contraseña:" HorizontalAlignment="Left" Height="27" Margin="68,42,0,0" VerticalAlignment="Top" Width="74"/>
		<PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" Height="27" Margin="147,42,0,0" VerticalAlignment="Top" Width="130" TabIndex="2" BorderBrush="Black"/>
		<TextBox x:Name="txtUserId" HorizontalAlignment="Left" Height="27" Margin="147,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130" TabIndex="1" BorderBrush="Black"/>
		<Button x:Name="btnAccept" Content="Aceptar" HorizontalAlignment="Left" Height="24.97" Margin="50,82,0,0" VerticalAlignment="Top" Width="90" Cursor="Hand" Click="btnAccept_Click" TabIndex="3"/>
		<Button x:Name="btnCancel" Content="Cancelar" HorizontalAlignment="Left" Height="24.97" Margin="145,82,0,0" VerticalAlignment="Top" Width="90" Cursor="Hand" Click="btnCancel_Click" TabIndex="4"/>
	</Grid>
</Window>