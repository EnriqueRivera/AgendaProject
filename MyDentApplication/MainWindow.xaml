<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WpfScheduler="clr-namespace:WpfScheduler;assembly=WpfScheduler" x:Class="MyDentApplication.MainWindow"
        Title="Agenda" Height="350" Width="525" MinWidth="600" MinHeight="600" Icon="app_icon.ico">
	<Grid>
		<WpfScheduler:Scheduler
            HorizontalAlignment="Stretch" x:Name="scheduler" VerticalAlignment="Stretch"
            Margin="200,10,0,10" 
			OnScheduleCancelEvent="scheduler_OnScheduleCancelEvent" 
			OnScheduleAddEvent="scheduler_OnScheduleAddEvent"
			OnEventMouseLeftButtonDown="scheduler_OnEventMouseLeftButtonDown"/>
		<Calendar x:Name="calendar" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" SelectedDatesChanged="calendar_SelectedDatesChanged"/>
		<Button Content="Button" HorizontalAlignment="Left" Height="32" Margin="48,250,0,0" VerticalAlignment="Top" Width="94" Click="Button_Click"/>
	</Grid>
</Window>
