<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="MyDentApplication.RequestAdminCredentials"
	x:Name="Window"
	Title="Credenciales de administrador"
	Width="304.642" Height="149.97" WindowStyle="ToolWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

	<Grid x:Name="LayoutRoot">
		<Label x:Name="lblUserId" Content="Número de empleado:" HorizontalAlignment="Left" Height="27" Margin="10,10,0,0" VerticalAlignment="Top" Width="132"/>
		<Label x:Name="lblPassword" Content="Contraseña:" HorizontalAlignment="Left" Height="27" Margin="68,42,0,0" VerticalAlignment="Top" Width="74"/>
		<PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" Height="27" Margin="147,42,0,0" VerticalAlignment="Top" Width="130"/>
		<TextBox x:Name="txtUserId" HorizontalAlignment="Left" Height="27" Margin="147,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="130"/>
		<Button x:Name="btnAccept" Content="Aceptar" HorizontalAlignment="Left" Height="24.97" Margin="50,82,0,0" VerticalAlignment="Top" Width="90" Cursor="Hand" Click="btnAccept_Click"/>
		<Button x:Name="btnCancel" Content="Cancelar" HorizontalAlignment="Left" Height="24.97" Margin="145,82,0,0" VerticalAlignment="Top" Width="90" Cursor="Hand" Click="btnCancel_Click"/>
	</Grid>
</Window>