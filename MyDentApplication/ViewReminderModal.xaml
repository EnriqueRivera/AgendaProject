<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	x:Class="MyDentApplication.ViewReminderModal"
	x:Name="Window"
	Title="Ver recordatorio"
	Width="350" Height="250" Icon="app_icon.ico" WindowStartupLocation="CenterScreen">

	<Grid x:Name="LayoutRoot">
		<Label x:Name="lblReminderSubject" Content="Asunto:" HorizontalAlignment="Left" Height="25.672" Margin="10,10,0,0" VerticalAlignment="Top" Width="53.408"/>
		<Border BorderThickness="1" BorderBrush="Black" Margin="10,33.116,10,0" Height="36.97" VerticalAlignment="Top">
			<TextBox x:Name="txtReminderSubject" Margin="0" FontStyle="Italic" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
		</Border>
		<Label x:Name="lblReminderMessage" Content="Mensaje:" HorizontalAlignment="Left" Height="25.672" Margin="10,88,0,0" VerticalAlignment="Top" Width="60.408"/>
		<Border BorderThickness="1" BorderBrush="Black" Margin="10,113.672,10,10">
			<TextBox x:Name="txtReminderMessage" Margin="0,0,0,0" FontStyle="Italic" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
		</Border>
	</Grid>
</Window>